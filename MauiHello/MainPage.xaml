<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHello.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Label x:Name="lbl_hello" FontSize="30" TextColor="Purple" Margin="20, 20, 20, 20" />

            <Button x:Name="btn_hello" Text="Say Hello" Clicked="btn_hello_Clicked" CornerRadius="20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
