<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiHello.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiHello"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiHello">

    <TabBar>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
     Title="Lights"
     ContentTemplate="{DataTemplate local:Lights}"
     Route="Lights" />

        <ShellContent
    Title="Calculator"
    ContentTemplate="{DataTemplate local:LaskinPage}"
    Route="LaskinPage" />

    </TabBar>

</Shell>
